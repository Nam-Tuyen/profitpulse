{
  "version": 2,
  "buildCommand": "npm ci --omit=dev --prefer-offline && npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm ci --omit=dev --prefer-offline",
  "framework": "vite",
  "rootDirectory": "frontend",
  "cleanUrls": true,
  "trailingSlash": false,
  "ignoreCommand": "echo 'Building frontend only'",
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
