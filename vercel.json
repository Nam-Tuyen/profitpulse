{
  "version": 2,
  "buildCommand": "cd frontend && npm ci --omit=dev && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm ci --omit=dev",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./frontend/",
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
